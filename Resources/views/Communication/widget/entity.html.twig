{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('ds.communication.id.label'|trans, entity.id) }}
            {{ UI.renderProperty('ds.communication.title.label'|trans, entity.title) }}
            {{ UI.renderProperty('ds.communication.description.label'|trans, entity.description) }}

        </div>

        <div class="responsive-block">
            {% for s,cnt in context.sending_status_stats %}
                {{ UI.renderProperty(s, cnt) }}
            {% else %}
                <li>No statistics yet</li>
            {% endfor %}
        </div>
    </div>
    {% for widget in ds_widgets({ position: 'ds_communication_communication_entity_communication', context: context }, { entity: entity }) %}
        {{ widget.content|raw }}
    {% endfor %}
</div>
